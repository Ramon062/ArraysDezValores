import java.util.Scanner;

public class ArrayMaiorValor {

	public static void main(String[] args) {
		
		
		Scanner ler = new Scanner (System.in);
		
		

		
		
		
		int [] maior = new int[5];
		int posicao = 0;
		int  num1;
		int numMaior = 0;
		
		System.out.println("\n ======= PROGRAMAAAAAAAAAAA 03 ======== \n");
		
		
		
		
		
		
		for (int i = 1; i < 5; i++) {

			//trocando o "5 pelo 10" tera como trocar para 10 valores informados para o usuario
			
			System.out.println("INFORME UM NUMERO:  ");
			num1 = ler.nextInt();
			maior[i] = num1;
			
		}
			for (int i = 0; i < maior.length; i++) {
				
			
			if (maior[i]  > numMaior) {
				
				numMaior = maior[i];
				posicao = i;
			}
			}
			System.out.println("A posicao do maior numero e: " + posicao);
			
		}
	}
